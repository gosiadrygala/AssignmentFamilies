@page "/adults"
@using Models
@inject InterfaceAdultsData AdultsData;

<div class="adultspage">
    <div class="svgimg">
        <img src="Images/adults.svg" alt="Adults">
    </div>
    <div class="adult-table">
        <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
            <th>Job Title</th>
            <th>Salary</th>
            <th>Details</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in adults)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Age</td>
                <td>@item.JobTitle.JobTitle</td>
                <AuthorizeView Policy="MustBeAdministrator">
                    <td>@item.JobTitle.Salary</td>
                </AuthorizeView>
                <td>
                    <PopupBox id="@item.Id"/>
                </td>
            </tr>

        }
        </tbody>
    </div>
</div>


@code {
    
    private IList<Adult> adults;

    protected override async Task OnInitializedAsync()
    {
        adults = AdultsData.GetAllAdults();
    }

}